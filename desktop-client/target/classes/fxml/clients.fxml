<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.desktop.controller.ClientsController">
   <padding>
      <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
   </padding>
   
   <HBox alignment="CENTER_LEFT" spacing="12.0">
      <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #9b59b6; -fx-background-radius: 10;">
         <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="CLI" />
      </VBox>
      <VBox spacing="2.0">
         <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Clientes" />
         <Label style="-fx-font-size: 10px; -fx-text-fill: #95a5a6;" text="Clients Management System" />
      </VBox>
   </HBox>
   
   <Region prefHeight="12.0" />
   
   <HBox alignment="CENTER_LEFT" spacing="10.0">
      <TextField fx:id="searchField" prefWidth="250.0" promptText="Buscar cliente..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" />
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="add_client" onAction="#add_client_button" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Add Client" />
   </HBox>
   
   <Region prefHeight="12.0" />
   
   <TableView fx:id="clientsTable" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
      <columns>
         <TableColumn fx:id="col_id" minWidth="50.0" prefWidth="60.0" text="ID" />
         <TableColumn fx:id="col_name" minWidth="150.0" prefWidth="180.0" text="Name" />
         <TableColumn fx:id="col_email" minWidth="180.0" prefWidth="200.0" text="Email" />
         <TableColumn fx:id="col_phone" minWidth="100.0" prefWidth="120.0" text="Phone Number" />
         <TableColumn fx:id="col_address" minWidth="150.0" prefWidth="180.0" text="Address" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</VBox>
