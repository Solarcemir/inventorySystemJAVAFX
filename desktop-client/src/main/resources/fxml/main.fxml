<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F5F5F5;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.inventory.desktop.controller.MainController">

  
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" style="-fx-background-color: #E3F2FD; -fx-border-color: #BBDEFB; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="0" left="10" right="10" top="0" />
            </padding>
            <Label text="Inventory Management System">
                <font><Font name="System Bold" size="16.0" /></font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #1976D2;" text="Settings" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #1976D2;" text="Help" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #1976D2;" text="Logout" />
        </HBox>
    </top>

  
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="15" style="-fx-background-color: #E3F2FD; -fx-border-color: #BBDEFB; -fx-border-width: 0 1 0 0;">
            <padding><Insets bottom="10" left="10" right="10" top="20" /></padding>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <image><Image url="@../images/cftlogo.jpg" /></image>
            </ImageView>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #1976D2;" text="WELCOME BACK!" />
            <Line endX="140.0" startX="-140.0" stroke="#BBDEFB" />
            <Button fx:id="home" onAction="#showHome" prefWidth="140.0" style="-fx-background-color: #BBDEFB; -fx-text-fill: white; -fx-background-radius: 5;" text="HOME" />
            <Button fx:id="add_product" onAction="#showAddProduct" prefWidth="140.0" style="-fx-background-color: #BBDEFB; -fx-text-fill: white; -fx-background-radius: 5;" text="ADD PRODUCT" />
            <Button fx:id="view_inventory" onAction="#showInventory" prefWidth="140.0" style="-fx-background-color: #BBDEFB; -fx-text-fill: white; -fx-background-radius: 5;" text="VIEW INVENTORY" />
            <Button fx:id="analytics" onAction="#showAnalytics" prefWidth="140.0" style="-fx-background-color: #BBDEFB; -fx-text-fill: white; -fx-background-radius: 5;" text="ANALYTICS" />
        </VBox>
    </left>

  
    <center>
        <StackPane fx:id="contentArea" />
    </center>

</BorderPane>