<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SplitPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.desktop.controller.ViewProductController">
   <children>
      <SplitPane dividerPositions="0.6" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <!-- Panel izquierdo: Tabla -->
          <AnchorPane minWidth="300.0" style="-fx-background-color: white;">
            <children>
              <TableView fx:id="table_view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                  <TableColumn fx:id="col_id" minWidth="40.0" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="col_name" minWidth="100.0" prefWidth="120.0" text="Name" />
                  <TableColumn fx:id="col_provider" minWidth="80.0" prefWidth="90.0" text="Provider" />
                  <TableColumn fx:id="col_category" minWidth="80.0" prefWidth="90.0" text="Category" />
                  <TableColumn fx:id="col_price" minWidth="60.0" prefWidth="70.0" text="Price" />
                  <TableColumn fx:id="col_quantity" minWidth="40.0" prefWidth="50.0" text="Qty" />
                </columns>
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
              </TableView>
            </children>
          </AnchorPane>
          
          <!-- Panel derecho: Detalles -->
          <AnchorPane minWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #FFF8E1, #FFECB3);">
            <children>
              <Label layoutX="80.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #F57C00;" text="Product Details" />
              
              <!-- Imagen del producto -->
              <ImageView fx:id="table_image" fitHeight="140.0" fitWidth="200.0" layoutX="25.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);" />
              
              <!-- Detalles -->
              <Label fx:id="detail_name" layoutX="15.0" layoutY="190.0" prefWidth="220.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #E65100;" text="Select a product" />
              <Label fx:id="detail_provider" layoutX="15.0" layoutY="215.0" prefWidth="220.0" style="-fx-font-size: 11px; -fx-text-fill: #424242;" text="Provider:" />
              <Label fx:id="detail_category" layoutX="15.0" layoutY="235.0" prefWidth="220.0" style="-fx-font-size: 11px; -fx-text-fill: #424242;" text="Category:" />
              <Label fx:id="detail_description" layoutX="15.0" layoutY="255.0" prefHeight="40.0" prefWidth="220.0" style="-fx-font-size: 10px; -fx-text-fill: #616161;" text="Description:" wrapText="true" />
              <Label fx:id="detail_price" layoutX="15.0" layoutY="300.0" prefWidth="220.0" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" text="Price:" />
              <Label fx:id="detail_quantity" layoutX="15.0" layoutY="320.0" prefWidth="220.0" style="-fx-font-size: 11px; -fx-text-fill: #424242;" text="Quantity:" />
              
              <!-- Search -->
              <TextField fx:id="search_field" layoutX="15.0" layoutY="350.0" prefHeight="30.0" prefWidth="220.0" promptText="Search products..." style="-fx-background-radius: 5; -fx-border-color: #FF9800; -fx-border-radius: 5;" />
              
              <!-- Botones -->
              <HBox layoutX="15.0" layoutY="390.0" spacing="10.0">
                <children>
                  <Button fx:id="sell_button" mnemonicParsing="false" prefHeight="32.0" prefWidth="70.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="SELL" />
                  <Button fx:id="edit_button" mnemonicParsing="false" prefHeight="32.0" prefWidth="70.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="EDIT" />
                  <Button fx:id="delete_button" mnemonicParsing="false" prefHeight="32.0" prefWidth="70.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="DELETE" />
                </children>
              </HBox>
            </children>
          </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
