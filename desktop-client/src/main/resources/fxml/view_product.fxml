<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>

<SplitPane dividerPositions="0.60" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.desktop.controller.ViewProductController">
   <!-- Panel izquierdo: Tabla -->
   <VBox style="-fx-background-color: white;">
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
      
      <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Inventory" />
      <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-padding: 0 0 10 0;" text="Click on a product to view details" />
      
      <TableView fx:id="table_view" VBox.vgrow="ALWAYS" style="-fx-background-radius: 8;">
         <columns>
            <TableColumn fx:id="col_id" minWidth="50.0" prefWidth="60.0" text="ID" />
            <TableColumn fx:id="col_name" minWidth="120.0" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="col_provider" minWidth="90.0" prefWidth="100.0" text="Provider" />
            <TableColumn fx:id="col_category" minWidth="90.0" prefWidth="100.0" text="Category" />
            <TableColumn fx:id="col_price" minWidth="70.0" prefWidth="80.0" text="Price" />
            <TableColumn fx:id="col_quantity" minWidth="50.0" prefWidth="60.0" text="Qty" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </VBox>
   
   <!-- Panel derecho: Detalles -->
   <VBox alignment="TOP_CENTER" spacing="12.0" style="-fx-background-color: #ecf0f1;">
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
      
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Product Details" />
      
      <!-- Imagen del producto - MÃ¡s grande y clickeable -->
      <VBox alignment="CENTER" prefHeight="220.0" prefWidth="280.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 10; -fx-cursor: hand;">
         <ImageView fx:id="table_image" fitHeight="200.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true" />
         <Label style="-fx-font-size: 9px; -fx-text-fill: #95a5a6;" text="Click image to enlarge" />
      </VBox>
      
      <!-- Detalles del producto -->
      <VBox spacing="6.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12;">
         <Label fx:id="detail_name" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Select a product" wrapText="true" />
         <Label fx:id="detail_provider" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Provider:" />
         <Label fx:id="detail_category" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Category:" />
         <Label fx:id="detail_description" prefHeight="40.0" style="-fx-font-size: 11px; -fx-text-fill: #95a5a6;" text="Description:" wrapText="true" />
         <Label fx:id="detail_price" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="Price:" />
         <Label fx:id="detail_quantity" style="-fx-font-size: 13px; -fx-text-fill: #34495e;" text="Quantity:" />
      </VBox>
      
      <!-- Search -->
      <TextField fx:id="search_field" prefHeight="35.0" promptText="Search products..." style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
      
      <!-- Botones -->
      <HBox alignment="CENTER" spacing="12.0">
         <Button fx:id="sell_button" mnemonicParsing="false" prefHeight="38.0" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8; -fx-cursor: hand;" text="SELL" />
         <Button fx:id="edit_button" mnemonicParsing="false" prefHeight="38.0" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8; -fx-cursor: hand;" text="EDIT" />
         <Button fx:id="delete_button" mnemonicParsing="false" prefHeight="38.0" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 8; -fx-cursor: hand;" text="DELETE" />
      </HBox>
   </VBox>
</SplitPane>
