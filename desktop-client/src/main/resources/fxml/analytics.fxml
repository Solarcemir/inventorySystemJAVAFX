<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: linear-gradient(to bottom, #667eea, #764ba2); -fx-background-color: #a8d2ffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.desktop.controller.AnalyticsController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="18.0" style="-fx-background-color: #F0FFFF;">
         <padding>
            <Insets bottom="25.0" left="35.0" right="35.0" top="25.0" />
         </padding>
         
         <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Analytics Dashboard" />
         
         <!-- KPI Cards - Fila 1: Revenue y Profit -->
         <HBox alignment="CENTER" spacing="12.0">
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="130.0" spacing="5.0" style="-fx-background-color: #27ae60; -fx-background-radius: 10;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.9);" text="TOTAL REVENUE" />
               <Label fx:id="lbl_total_revenue" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="130.0" spacing="5.0" style="-fx-background-color: #8e44ad; -fx-background-radius: 10;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.9);" text="TOTAL PROFIT" />
               <Label fx:id="lbl_total_profit" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="130.0" spacing="5.0" style="-fx-background-color: #16a085; -fx-background-radius: 10;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.9);" text="PROFIT MARGIN" />
               <Label fx:id="lbl_profit_margin" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0%" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="130.0" spacing="5.0" style="-fx-background-color: #3498db; -fx-background-radius: 10;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.9);" text="TODAY SALES" />
               <Label fx:id="lbl_today_sales" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="130.0" spacing="5.0" style="-fx-background-color: #2980b9; -fx-background-radius: 10;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.9);" text="TODAY PROFIT" />
               <Label fx:id="lbl_today_profit" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
         </HBox>
         
         <!-- KPI Cards - Fila 2: Inventory y Stock -->
         <HBox alignment="CENTER" spacing="12.0">
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #9b59b6; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="PRODUCTS" />
               <Label fx:id="lbl_total_products" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #f39c12; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="TOTAL SALES" />
               <Label fx:id="lbl_total_sales" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #1abc9c; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="AVG SALE" />
               <Label fx:id="lbl_avg_sale" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #34495e; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="INVENTORY VALUE" />
               <Label fx:id="lbl_inventory_value" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0.00" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #e67e22; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="LOW STOCK" />
               <Label fx:id="lbl_low_stock" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="4.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 10;">
               <padding><Insets bottom="8.0" left="8.0" right="8.0" top="8.0" /></padding>
               <Label style="-fx-font-size: 8px; -fx-text-fill: rgba(255,255,255,0.9);" text="OUT OF STOCK" />
               <Label fx:id="lbl_out_of_stock" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
            </VBox>
         </HBox>
         
         <!-- Daily Analytics Table -->
         <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #F0FFFF; -fx-background-radius: 12; -fx-padding: 15;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Daily Analytics (Last 7 Days)" />
            <TableView fx:id="table_daily_analytics" prefHeight="220.0" minHeight="220.0" prefWidth="780.0" style="-fx-background-radius: 8;">
               <columns>
                  <TableColumn fx:id="col_daily_date" prefWidth="100.0" text="Date" />
                  <TableColumn fx:id="col_daily_revenue" prefWidth="100.0" text="Revenue" />
                  <TableColumn fx:id="col_daily_cost" prefWidth="100.0" text="Cost" />
                  <TableColumn fx:id="col_daily_profit" prefWidth="100.0" text="Profit" />
                  <TableColumn fx:id="col_daily_margin" prefWidth="80.0" text="Margin %" />
                  <TableColumn fx:id="col_daily_sales" prefWidth="80.0" text="Sales" />
                  <TableColumn fx:id="col_daily_items" prefWidth="80.0" text="Items" />
               </columns>
            </TableView>
         </VBox>
         
         <!-- Charts Row -->
         <HBox alignment="CENTER" spacing="20.0">
            <VBox prefWidth="400.0" spacing="8.0" style="-fx-background-color: #58ffa6ff; -fx-background-radius: 12; -fx-padding: 15;">
               <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sales Last 7 Days" />
               <BarChart fx:id="chart_sales_by_day" prefHeight="200.0" animated="false">
                  <xAxis>
                     <CategoryAxis label="Date" side="BOTTOM" />
                  </xAxis>
                  <yAxis>
                     <NumberAxis label="Revenue" side="LEFT" />
                  </yAxis>
               </BarChart>
            </VBox>
            
            <VBox prefWidth="320.0" spacing="8.0" style="-fx-background-color: #abffffff; -fx-background-radius: 12; -fx-padding: 15;">
               <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sales by Category" />
               <PieChart fx:id="chart_category" prefHeight="200.0" legendVisible="true" animated="false" />
            </VBox>
         </HBox>
         
         <!-- Tables Row -->
         <HBox alignment="CENTER" spacing="20.0">
            <VBox prefWidth="360.0" spacing="8.0" style="-fx-background-color: #F0FFFF; -fx-background-radius: 12; -fx-padding: 15;">
               <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Top 5 Products" />
               <TableView fx:id="table_top_products" prefHeight="160.0" minHeight="160.0" style="-fx-background-radius: 8;">
                  <columns>
                     <TableColumn fx:id="col_top_name" prefWidth="140.0" text="Product" />
                     <TableColumn fx:id="col_top_qty" prefWidth="70.0" text="Sold" />
                     <TableColumn fx:id="col_top_revenue" prefWidth="100.0" text="Revenue" />
                  </columns>
               </TableView>
            </VBox>
            
            <VBox prefWidth="360.0" spacing="8.0" style="-fx-background-color: #F0FFFF; -fx-background-radius: 12; -fx-padding: 15;">
               <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Recent Sales" />
               <TableView fx:id="table_recent_sales" prefHeight="160.0" minHeight="160.0" style="-fx-background-radius: 8;">
                  <columns>
                     <TableColumn fx:id="col_recent_product" prefWidth="110.0" text="Product" />
                     <TableColumn fx:id="col_recent_qty" prefWidth="45.0" text="Qty" />
                     <TableColumn fx:id="col_recent_total" prefWidth="80.0" text="Total" />
                     <TableColumn fx:id="col_recent_date" prefWidth="90.0" text="Date" />
                  </columns>
               </TableView>
            </VBox>
         </HBox>
         
         <!-- Low Stock Alert -->
         <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #F0FFFF; -fx-background-radius: 12; -fx-padding: 15;">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="Low Stock Alert" />
            <TableView fx:id="table_low_stock" prefHeight="140.0" minHeight="140.0" prefWidth="700.0" style="-fx-background-radius: 8;">
               <columns>
                  <TableColumn fx:id="col_low_name" prefWidth="260.0" text="Product" />
                  <TableColumn fx:id="col_low_category" prefWidth="200.0" text="Category" />
                  <TableColumn fx:id="col_low_qty" prefWidth="140.0" text="Remaining" />
               </columns>
            </TableView>
         </VBox>
      </VBox>
   </content>
</ScrollPane>
